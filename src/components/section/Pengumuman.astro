---
import { getCollection } from "astro:content";

const pengumuman = await getCollection('pengumuman');
---
<div class="space-y-12">
	<div class="text-gray-200">
		<h2 class="text-4xl font-semibold">Pengumuman Sekolah</h2>
		<hr class="border-yellow-300 mt-4 w-16 border-2" />
	</div>
	<div class="space-y-2">
	{pengumuman.map( p =>
		<article class="flex gap-2">
			<div class="flex flex-col items-center justify-center bg-yellow-300 text-blue-900 p-2 font-bold size-20 rounded">
				<span class="text-4xl">{p.data.pubDate.getDate()}</span>
				<hr class="w-full border-blue-900" />
				<span class="text-2xl">{p.data.pubDate.toLocaleDateString('id',{month: "short"})}</span>
			</div>
			<div class="text-gray-200">
				<a href="/" class="font-bold text-lg"><h3>{p.data.title}</h3></a>
				<time datetime={p.data.pubDate}>{p.data.pubDate.toLocaleDateString('id',{
					year: "numeric",
					month: "short",
					day: "numeric",})}
				</time>
			</div>
		</article>
	)}
	</div>
</div>
