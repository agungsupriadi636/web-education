---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const extrakurikuler = await getCollection('extrakurikuler');
---
<section class="py-20 text-gray-900">
	<div class="container">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-semibold text-blue-900">Extrakurikuler</h2>
			<hr class="border-yellow-300 mt-4 w-16 mx-auto border-2" />
		</div>
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
		{extrakurikuler.map( x =>
			<article class="relative">
				<Image class="block aspect-video object-cover" src={x.data.image.src} alt={x.data.image.alt} />
				<div class="absolute bottom-0 left-0 size-full bg-gradient-to-t from-blue-900/80 to-transparent flex items-end">
					<div class="w-full text-white p-3">
						<h3 class="text-yellow-300 text-xl font-semibold">{x.data.title}</h3>
						<p>{x.data.time}</p>
					</div>
				</div>
			</article>
		)}
		</div>
	</div>
</section>
